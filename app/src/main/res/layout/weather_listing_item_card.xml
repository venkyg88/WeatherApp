<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="7dp"
             android:layout_marginTop="7dp"
             android:layout_marginRight="7dp">
    <android.support.v7.widget.CardView
        android:id="@+id/search_item_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_time"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                android:text="Sample Time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_city"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_time"
                android:textSize="16sp"
                android:text="New York"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_condition"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/item_city"
                android:textSize="16sp"
                android:text="Coludy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_temp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/item_condition"
                android:textSize="30sp"
                android:text="95F"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_image"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_city"
                android:layout_alignBottom="@id/item_temp"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>